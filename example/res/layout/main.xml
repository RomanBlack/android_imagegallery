<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <com.romanblack.android.widget.imagegallery.ImageGallery 
            android:id="@+id/img_gallery"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:background="#000000"/>
            
    <RelativeLayout android:layout_height="40dp"
            android:layout_width="fill_parent"
            android:background="#fff"
            android:padding="5dp">
                
        <ImageView android:id="@+id/left_end_button"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/end_left"
                android:layout_alignParentLeft="true"/> 
        
        <ImageView android:id="@+id/right_end_button"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/end_right"
                android:layout_alignParentRight="true"/> 
        
    </RelativeLayout>

</LinearLayout>
